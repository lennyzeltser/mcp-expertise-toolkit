{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"lib": ["ES2022"],
		"types": ["node", "@cloudflare/workers-types/2023-07-01"],
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "scripts/**/*", "worker-configuration.d.ts"],
	"exclude": ["node_modules"]
}
